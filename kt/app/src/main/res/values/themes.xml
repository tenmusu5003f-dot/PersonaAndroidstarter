<resources>
    <!-- Material Components でも Material3 でもOK。まずはMCで -->
    <style name="Theme.Persona" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
</resources>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Persona" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- スプラッシュ画面の背景色を黒にする -->
        <item name="android:windowSplashScreenBackground">@color/black</item>
        <!-- ステータスバーの色 -->
        <item name="android:statusBarColor">@color/black</item>
    </style>

</resources>

<!-- res/values/themes.xml -->
<style name="Theme.Persona" parent="Theme.Material3.DayNight.NoActionBar" />

<!-- Android 12+ の SplashScreen 設定 -->
<style name="Theme.Persona.Splash" parent="Theme.SplashScreen">
    <!-- アプリアイコン（mipmap/ic_launcher でOK） -->
    <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
    <item name="windowSplashScreenBackground">@android:color/black</item>
    <!-- スプラッシュからメインへ移る時のフェード -->
    <item name="postSplashScreenTheme">@style/Theme.Persona</item>
</style>

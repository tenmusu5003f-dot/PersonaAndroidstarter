<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
        HTTPS通信のみ許可し、開発中のみ一部の例外（ローカル通信など）を許可。
        本番リリース時は domain-config の debug-overrides を削除する。
    -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">persona.app</domain>
    </domain-config>

    <!-- 開発用（エミュレータやlocalhost通信など） -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>
